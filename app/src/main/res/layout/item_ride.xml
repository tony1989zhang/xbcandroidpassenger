<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:orientation="vertical"
              android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/imageView_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
           >

            <TextView
                android:id="@+id/et_campany_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/level_bg"
                android:text="享八级"
                android:padding="3dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small_size"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@+id/et_campany_name"
                android:layout_alignParentRight="true"
           />

            <TextView
                android:id="@+id/tv_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/et_campany_name"
                android:layout_below="@+id/et_campany_name"
                android:textColor="@color/warmGrey"
                android:textSize="@dimen/text_middle_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9:30  ～  12:00"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_middle_size"
                android:id="@+id/tv_order_time"
                android:layout_above="@+id/tv_order_num"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_small_title"
                android:layout_alignParentBottom="true"
                android:text="出发时间"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_middle_size" />

            <!--<TextView-->
                <!--android:id="@+id/tv_total"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_toRightOf="@+id/tv_name"-->
                <!--android:text="总收入10000元"-->
                <!--android:textSize="@dimen/text_middle_size"-->
                <!--android:textColor="@color/divider" />-->

            <TextView
                android:id="@+id/tv_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥3500"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/title_main_text_size"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />



            <!--TextView-->
                <!--android:id="@+id/tv_other"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignRight="@+id/tv_print"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:ellipsize="end"-->
                <!--android:singleLine="true"-->
                <!--android:textSize="@dimen/text_smail_size"-->
                <!--android:textColor="@color/divider"-->
                <!--android:text="违约定金三倍赔率" />-->
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>
    <View style="@style/lineSolid"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="3dp"
        />
</LinearLayout>