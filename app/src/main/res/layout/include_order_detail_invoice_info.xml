<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_order_detail_invoice_info"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:background="@color/warmGrey"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="@string/invoice_info"
            android:textColor="@color/warmGrey"
            android:textSize="@dimen/text_default_size"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:background="@color/warmGrey"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抬    头："
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size"
                />
            <TextView
                android:id="@+id/tv_invoice_info_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张全蛋有限公司"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人："
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size"
                />
            <TextView
                android:id="@+id/tv_invoice_info_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张小姐  13055787933"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地    址："
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size"
                />
            <TextView
                android:id="@+id/tv_invoice_info_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="福建省集美区商务运营中心3678号5楼详细某某某座位某某某旁边"
                android:maxLines="3"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
