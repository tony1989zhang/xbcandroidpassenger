<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_include_cost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/smail_circle"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/tag_way_icon"
                android:gravity="center|left"
                android:text="包含费用"
                android:textColor="@color/warmGrey"
                android:textSize="@dimen/text_middle_size" />

            <TextView
                android:id="@+id/tv_include_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/divider" />
        </LinearLayout>

        <!--<com.lvchehui.www.xiangbc.view.tag.TagListView-->
        <!--xmlns:f="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/tag_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:paddingTop="3.0dip"-->
        <!--android:paddingBottom="3dp"-->
        <!--f:horizontalSpacing="2dp"-->
        <!--f:orientation="horizontal"-->
        <!--f:verticalSpacing="2dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_default_size"
                    android:textColor="@color/text_default_color"
                    android:text="保险50万/座" />

                <CheckBox
                    style="@style/checkBoxStyle"
                    android:enabled="true"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_default_size"
                    android:textColor="@color/text_default_color"
                    android:text="路桥费" />

                <CheckBox
                    style="@style/checkBoxStyle"
                    android:enabled="true"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_default_size"
                    android:textColor="@color/text_default_color"
                    android:text="油费" />

                <CheckBox
                    style="@style/checkBoxStyle"
                    android:enabled="false"
                    android:checked="true"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_default_size"
                    android:textColor="@color/text_default_color"
                    android:text="司机工作餐" />

                <CheckBox
                    style="@style/checkBoxStyle"
                    android:enabled="true"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_default_size"
                    android:textColor="@color/text_default_color"
                    android:text="停车费" />

                <CheckBox
                    style="@style/checkBoxStyle"
                    android:enabled="true"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="备注：司机输入的备注显示"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/text_default_size" />

    </LinearLayout>
</LinearLayout>