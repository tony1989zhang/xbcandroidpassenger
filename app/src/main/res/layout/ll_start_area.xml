<LinearLayout
    android:id="@+id/ll_start_area"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray"
    android:gravity="center_vertical"
    android:minHeight="48.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_city_icon"
        />

    <TextView
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="1.0"
        android:text="@string/start_area"
        android:textColor="@color/text_default_lightblack"
        android:textSize="15.0sp"/>

    <TextView
        android:id="@+id/tv_start_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center|right"
        android:hint="@string/hint_area"
        android:maxLines="1"
        android:singleLine="true"
        android:maxLength="20"
        android:maxEms="30"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_default_size"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/item_back_icon"/>
</LinearLayout>