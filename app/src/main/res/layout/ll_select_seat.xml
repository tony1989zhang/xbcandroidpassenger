<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/bg_white_gray"
    android:gravity="center"
    android:minHeight="48dp"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_seat_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="20.0dip"
        android:gravity="center"
        android:text="@string/seats"
        android:textColor="@color/text_default_lightblack"
        android:textSize="@dimen/text_default_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <View
            style="@style/lineSolid_height"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/spinner_seat_num1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow"
            android:gravity="center"
            android:textColor="@color/text_black"/>

        <View
            style="@style/lineSolid_height"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/spinner_seat_num2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow"
            android:gravity="center"
            android:textColor="@color/text_black"/>

        <View
            style="@style/lineSolid_height"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/spinner_seat_num3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow"
            android:gravity="center"
            android:textColor="@color/text_black"/>
    </LinearLayout>
</LinearLayout>