<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/lotter_bg"
    android:orientation="vertical"
    android:scaleType="fitXY"
    android:weightSum="2">

    <com.lvchehui.www.xiangbc.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <com.lvchehui.www.xiangbc.view.TextView.lotter.LotterView
            xmlns:RoundAngleImageView="http://schemas.android.com/apk/res/com.lvchehui.www.xiangbc"
            android:id="@+id/lotter"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_large_size"
            RoundAngleImageView:roundHeight="100dp"
            RoundAngleImageView:roundWidth="300dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/item_redpacket_icon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="红包"
            android:textSize="@dimen/text_default_size"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/item_agent_icon"
            android:layout_marginLeft="30dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="赚更多"
            android:textSize="@dimen/text_default_size"
            android:textColor="@color/white"
         />

    </LinearLayout>


</LinearLayout>
