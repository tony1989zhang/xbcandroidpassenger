<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >
<!-- 256dp -->

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/diver_line"
        android:layout_marginTop="50dp"
        android:gravity="center" >

        <com.lvchehui.www.xiangbc.view.RoundAngleImageView
            android:id="@+id/iv_bottom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@android:color/white"
            app:roundHeight="25dp"
            app:roundWidth="25dp" />

        <TextView
            android:id="@+id/et_campany_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bottom"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_dj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_campany_name"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="信用等级"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <View
        android:id="@+id/diver_line"
        android:layout_width="236dp"
        android:layout_height="1sp"
        android:layout_below="@+id/ll1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#999" />

    <ScrollView
        android:id="@+id/reboundScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/diver_line"
        android:layout_below="@+id/diver_line" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/make_money"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="我要赚钱"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/recommended_awards"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="推荐有奖"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/guide"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="用户指南"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/management"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="常用管理"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="活动中心"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/team_occupancy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="车队入驻"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="设置"
                    android:textSize="@dimen/text_default_size" >
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>