<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/view_divider"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/layout_tx_nocard_bg"
            android:layout_marginTop="48dp"
            android:layout_gravity="center"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_default_size"
            android:textColor="@color/text_default_hintcolor"
            android:text="您还未绑定提现账号"
            android:layout_below="@+id/imageView4"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

    </LinearLayout>


    <View
        android:id="@+id/view_divider"
        style="@style/lineSolid"
        android:layout_above="@+id/tv_ok"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/BottomBtn"
        android:gravity="center"
        android:text="绑定支付宝/微信账户"
        android:textColor="@color/white"/>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/tag_bg_selector_default"
        android:gravity="center"
        android:text="绑定支付宝/微信账户"
        android:textColor="@color/white"
        android:id="@+id/tv_ok"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />-->
</RelativeLayout>
