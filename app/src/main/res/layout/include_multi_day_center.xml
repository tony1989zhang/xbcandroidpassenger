<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    >
    <View style="@style/lineSolid"
        />
    <LinearLayout
        android:id="@+id/ll_start_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_gray"
        android:gravity="center_vertical"
        android:minHeight="48.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/item_time_icon"
            />

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:text="出发日期"
            android:textColor="@color/text_default_lightblack"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center|right"
            android:maxLines="3"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_default_size"
            android:hint="请选择出发日期" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/item_back_icon" />
    </LinearLayout>
    <View style="@style/lineSolid"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <LinearLayout
        android:id="@+id/ll_finish_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_gray"
        android:gravity="center_vertical"
        android:minHeight="48.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/item_time_icon"
            />


        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:text="结束日期"
            android:textColor="@color/text_default_lightblack"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/tv_finish_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center|right"
            android:maxLines="3"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_default_size"
            android:hint="请选择结束日期" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/item_back_icon" />
    </LinearLayout>
    <View style="@style/lineSolid"
        />

    <LinearLayout
        android:id="@+id/ll_multi_day_trip_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
</LinearLayout>
