<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg_img"
    android:orientation="vertical">

    <com.lvchehui.www.xiangbc.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.lvchehui.www.xiangbc.view.EditText.EditTextWithDel
        android:id="@+id/account_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:digits="0123456789"
        android:gravity="center|left"
        android:inputType="phone"
        android:hint="@string/hint_input_account"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        style="@style/HintEt" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_bg_hint"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
       >

        <EditText
            android:id="@+id/captcha_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789"
            android:gravity="center|left"
            android:hint="@string/hint_input_captcha"
            android:maxLength="4"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            style="@style/HintEt"
            />

        <com.lvchehui.www.xiangbc.view.button.ButtonForCaptcha
            android:id="@+id/captcha_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="96dp"
            android:minHeight="40dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/fetch_captcha"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            style="@style/BottomBtn"
            />
        <!--android:textSize="@dimen/text_default_size"
            android:background="@drawable/rect_normal_yellow_captcha"
            custom:pb_colorComplete="@color/button_complete"
            custom:pb_colorNormal="@color/button_normal"
            custom:pb_colorPressed="@color/button_pressed"
            custom:pb_colorProgress="@color/button_progress"
            custom:pb_textComplete="@string/Success"
            custom:pb_textProgress="@string/Loading"-->
    </RelativeLayout>
    <com.lvchehui.www.xiangbc.view.EditText.EditTextForPwd
        android:id="@+id/password_new_et"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:digits="._@0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ/*-+`!$#%"
        android:gravity="center|left"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        style="@style/HintEt" />
    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="登录"
        style="@style/BottomBtn"
        />
</LinearLayout>
