<LinearLayout
    android:id="@+id/ll_invoice"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_gray"
    android:gravity="center_vertical"
    android:minHeight="48.0dip"
    android:paddingLeft="10.0dip"
    android:paddingRight="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/item_invoice_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"

        android:layout_marginRight="5dp"
        android:text="@string/invoice"
        android:textColor="@color/text_default_lightblack"
        android:textSize="15.0sp"/>

    <TextView
        android:id="@+id/tv_invoice"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@null"
        android:gravity="right"
        android:hint="@string/hint_invoice"
        android:textSize="@dimen/text_middle_size"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/item_back_icon"/>
</LinearLayout>