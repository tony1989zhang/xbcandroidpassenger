<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="@color/item_list_press" />
                    <corners android:radius="@dimen/radius" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- 第一层 -->
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="#7ec1c1c1" />
                    <corners android:radius="@dimen/radius" />
                    <!-- 描边 -->
                    <!--<stroke android:width="1dp" android:color="#7ec1c1c1" />-->
                </shape>
            </item>
            <!--&lt;!&ndash; 第二层 &ndash;&gt;-->
            <item android:bottom="1dp" android:right="1dp">
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/radius" />
                    <!-- 描边 -->
                    <!--<stroke android:width="1dp" android:color="#7ec1c1c1" />-->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>